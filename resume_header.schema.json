{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://w3-hb/resume_header.schema.json",
  "title": "W3 Resume Header Schema",
  "type": "object",
  "required": ["keyword", "task_id", "timestamp"],
  "properties": {
    "keyword": { "type": "string" },
    "task_id": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "state": { "type": "string" },
    "next_action": { "type": "string" },
    "contact": { "type": "string" },
    "repo": { "type": "string" }
  },
  "additionalProperties": false
}
